{:tasks
 {compile
  (clojure "-M:shadow-cli:dev" "compile" "main" "renderer" "preload")
  watch
  (clojure "-M:shadow-cli:dev" "watch" "main" "renderer" "preload")
  start
  (shell
   {:extra-env {"ELECTRON_DISABLE_SECURITY_WARNINGS" "true"}}
   "npx electron .")
  release (clojure "-M:shadow-cli:dev" "release" "main" "renderer" "preload")
  build
  {:depends [release]
   :task (shell "./script/build")}
  tw (shell "npx" "tailwind" "-i" "./src/org/sg/sghub/style.css" "-o" "./resources/public/site.css")}}
